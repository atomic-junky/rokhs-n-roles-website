{% set pageUrl = page.url | toAbsoluteUrl %} {# General #}
<meta name="description" content="{{ description or meta.description }}" />
<link rel="canonical" href="{{ pageUrl }}" />
<meta name="author" content="{{ meta.author }}" />
<meta name="generator" content="{{ eleventy.generator }}" />

{# Open Graph #}
<meta property="og:site_name" content="{{ meta.title }}" />
<meta property="og:title" content="{{ title or meta.title }}" />
<meta
	property="og:description"
	content="{{ description  or meta.description }}"
/>
<meta property="og:url" content="{{ pageUrl }}" />
<meta property="og:locale" content="{{ meta.locale }}" />
<meta
	name="twitter:card"
	content="{% if meta.image -%}summary_large_image{% else %}summary{% endif %}"
/>
{%- if meta.image -%}
<meta
	property="og:image"
	content="{{ meta.image | url | absoluteUrl(meta.url) }}"
/>
{%- endif -%} {# Favicon #}
<link
	rel="icon"
	type="image/png"
	href="{{ './assets/favicons/favicon-96x96.png' | toAbsoluteUrl }}"
	sizes="96x96"
/>
<link
	rel="icon"
	type="image/svg+xml"
	href="{{ './assets/favicons/favicon.svg' | toAbsoluteUrl }}"
/>
<link
	rel="shortcut icon"
	href="{{ './assets/favicons/favicon.ico' | toAbsoluteUrl }}"
/>
<link
	rel="apple-touch-icon"
	sizes="180x180"
	href="{{ './assets/favicons/apple-touch-icon.png' | toAbsoluteUrl }}"
/>
<meta name="apple-mobile-web-app-title" content="Rokhs&RÃ´les" />
<link rel="manifest" href="/site.webmanifest" />
{%- if meta.themeColor -%}
<meta name="theme-color" content="{{ meta.themeColor }}" />
{%- endif -%}
